#!/usr/bin/env bash
# Bash script to configure Nginx for redirection on Ubuntu 16.04

# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Nginx is not installed. Please run 1-install_nginx_web_server script first."
    exit 1
fi

# Define the redirection configuration
REDIRECTION_CONFIG="location /redirect_me {
    return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
}"

# Add the redirection configuration to the Nginx default site configuration
echo "$REDIRECTION_CONFIG" | tee -a /etc/nginx/sites-available/default > /dev/null

# Restart Nginx (without using systemctl)
service nginx restart

# Display a message indicating successful configuration
echo "Nginx configured for redirection. /redirect_me now redirects to https://www.youtube.com/watch?v=QH2-TGUlwu4"
