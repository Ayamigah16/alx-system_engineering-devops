#!/usr/bin/env bash
# This script displays the content of the current directory in a list format,
# showing only the part of the name after the first dash and excluding hidden files.

# Use the for loop to list the files in the current directory
for file in *; do
    # Check if the file is not hidden and contains a dash
    if [ ! -f "$file" ] || [[ "$file" == .* ]] || [[ "$file" != *-* ]]; then
        continue
    fi

    # Extract the part of the name after the first dash
    name_after_dash="${file#*-}"

    # Print the extracted name
    echo "$name_after_dash"
done
